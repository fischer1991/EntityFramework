
@model IList<Blog.Models.Post>

<h1>Lista de Posts</h1>
<table border="1">
	<thead>
		<tr>
			<th>Titulo</th>
			<th>Resumo</th>
			<th>Categoria</th>
			<th>Publicado</th>
			<th colspan="2">Ações</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var post in Model){
			<tr>
				<td>@Html.ActionLink(@post.Titulo,"Visualiza", new { ID= @post.ID})</td>
				<td>@post.Resumo</td>
				<td>@post.Categoria</td>
				<td>
					@if(@post.Publicado){
						@Html.Raw(string.Format("{0: dd/MM/yyyy} às {0:HH:mm}", @post.DataPublicacao));
					}else{
						@Html.Raw("Não");
					}
				</td>
				<td>
					@if(!@post.Publicado){
						@Html.ActionLink("Publicar","Publica", new { ID = @post.ID})
					}
				</td>
				<td>
					@Html.ActionLink("Remover","RemovePost", new { ID = @post.ID})			
				</td>
			</tr>
		}	
	</tbody>
</table>
@Html.ActionLink("Novo post","Novo")
